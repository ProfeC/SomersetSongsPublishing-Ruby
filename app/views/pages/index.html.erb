
<p id="notice"><%= notice %></p>

<h1>Listing Pages</h1>

<button type="button" class="btn btn-secondary btn-md"><%= link_to ' New Page', new_page_path, class: 'fa fa-plus-square' %></button>

<section class="song index">
  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th width="60%">Title</th>
        <th width="25%">Slug</th>
        <th colspan="3" width="15%"></th>
      </tr>
    </thead>

    <tbody>
      <% @pages.each do |page| %>
        <tr>
          <td><%= page.title %></td>
          <td><%= page.slug %></td>
          <td><%= link_to 'Show', page %></td>
          <td><%= link_to 'Edit', edit_page_path(page) %></td>
          <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</section>
