<table summary="Song form fields">
  <tr>
    <th><%= f.label(:title, "Title") %></th>
    <td><%= f.text_field(:title) %></td>
  </tr>
  <tr>
    <th><%= f.label(:description, "Description") %></th>
    <td><%= f.text_area(:description, :size => '40x5') %></td>
  </tr>
  <tr>
    <th><%= f.label(:artist_id, 'Artist') %></th>
    <td><%= f.select(:artist_id, @artists.map {|a| [a.name, a.id]}) %></td>
  </tr>
  <tr>
    <th><%= f.label(:album_id, 'Album')%></th>
    <td><%= f.select(:album_id, @albums.map {|a| [a.title, a.id]}) %></td>
  </tr>
  <tr>
    <th><%= f.label(:original_release_date) %></th>
    <td><%= f.text_field(:original_release_date) %></td>
  </tr>
  <tr>
    <th><%= f.label(:file_uri) %></th>
    <td><%= f.text_field(:file_uri) %></td>
  </tr>
  <tr>
    <th><%= f.label(:genre) %></th>
    <td><%= f.text_field(:genre) %></td>
  </tr>
  <tr>
    <th><%= f.label(:theme) %></th>
    <td><%= f.text_field(:theme) %></td>
  </tr>
  <tr>
    <th><%= f.label(:tag) %></th>
    <td><%= f.text_field(:tag) %></td>
  </tr>
  <tr>
    <th><%= f.label(:length) %></th>
    <td><%= f.text_field(:length) %></td>
  </tr>
</table>


