<%
# Reference: http://www.korenlc.com/creating-a-simple-search-in-rails-4/
%>

<section id="global-search" class="container-fluid search-bar">
  <%= form_tag({controller: "songs", action: "index"}, :method => "get", id: "search-form") do %>
    <div class="row">
      <div class="col-xs-12">
        <div class="input-group">
          <%= text_field_tag :q, params[:q], placeholder: "Search Genres, Moods, Songs or Themes", class: "form-control" %>
          <span class="input-group-btn"><%= submit_tag "Search",  :name => nil, class: "btn btn-default" %></span>
        </div>
      </div>
    </div>
  <% end %>
</section>
